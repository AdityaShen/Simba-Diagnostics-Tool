# Example .env file for Simba
# Copy to .env and fill in your values

SIMBA_SERVER_URL=http://localhost:8000
HTTP_PORT=8000
ADB_PATH=
PYTHON_PATH=
LOG_LEVEL=info
HAR_OUTPUT_DIR=output/har_files
ELECTRON_ENV=production
DIAGNOSTICS_DIR=output/diagnostics

# WebSocket port (if different from HTTP_PORT)
WS_PORT=8080

# Enable or disable HAR tracing (true/false)
ENABLE_HAR_TRACE=true

# Enable or disable device recording (true/false)
ENABLE_RECORDING=true

# Set to 'development' for verbose logging and hot reload
NODE_ENV=production
# Add other environment variables as needed
