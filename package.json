{
    "name": "simba",
    "version": "1.0.0",
    "main": "main-electron.js",
    "scripts": {
        "test": "node ./node_modules/.bin/mocha test/*.test.js || node test/basic.test.js",
        "lint": "eslint . --ext .js --ignore-pattern public/dist/ --ignore-pattern SimbaApp-win32-x64/resources/app/public/dist/",
        "format": "prettier --write .",
        "start": "electron main-electron.js",
        "dev": "parcel public/index.html --dist-dir public/dev-dist --public-url /",
        "copy-broadway-files": "cpy node_modules/broadway-player/Player/Decoder.js public/dist/vendor/",
        "build:parcel": "parcel build public/index.html public/landing.html --dist-dir public/dist",
        "build": "npm-run-all clean build:parcel copy-broadway-files",
        "clean": "rimraf ./public/dist ./public/dev-dist ./.parcel-cache",
        "rebuild": "npm run build"
    },
    "keywords": [],
    "description": "Web application for scrcpy screen and audio streaming.",
    "dependencies": {
        "@devicefarmer/adbkit": "^3.3.8",
        "broadway-player": "^0.1.1",
        "cpy-cli": "^5.0.0",
        "express": "^5.1.0",
        "h264-converter": "^0.1.4",
        "nanoid": "^5.1.5",
        "node-dns-sd": "^1.0.1",
        "qrcode": "^1.5.4",
        "ws": "^8.18.2"
    },
    "devDependencies": {
        "buffer": "^6.0.3",
        "crypto-browserify": "^3.12.1",
        "electron": "^38.0.0",
        "eslint": "^9.35.0",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.14.4",
        "path-browserify": "^1.0.1",
        "prettier": "3.6.2",
        "process": "^0.11.10",
        "rimraf": "^5.0.10",
        "svgo": "^3.3.2"
    }
}
